{
    "manifest_version": 2,

    "name": "Google search results blocker",
    "version": "0.2.0",
    "description": "Removes specified sites from google searches.",

    "content_scripts": [{
        "js": ["content.js"],
        "matches": ["*://*/*"],
        "include_globs": ["*://www.google.*/search?*"],
        "run_at": "document_start"
    }],
    "options_page": "options.html",
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "author": "Igor Fedotov"
}
